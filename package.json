{
  "name": "cppcheck",
  "displayName": "VSCode CPPCheck",
  "description": "an extension to collect and display Cppcheck results in vscode",
  "version": "0.0.2",
  "publisher": "alevine",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aldlevine/vscode_cppcheck.git"
  },
  "engines": {
    "vscode": "^1.84.2"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cppcheck",
          "title": "Cppcheck",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "cppcheck": [
        {
          "id": "cppcheck",
          "name": "Cppcheck"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cppcheck.run",
          "when": "view == cppcheck",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "cppcheck.run",
        "title": "Cppcheck: Run",
        "icon": "$(run)"
      },
      {
        "command": "cppcheck.openFile",
        "title": "Cppcheck: Open File"
      }
    ],
    "configuration": [
      {
        "title": "cppcheck",
        "properties": {
          "cppcheck.cppcheckPath": {
            "type": "string",
            "default": "cppcheck",
            "description": "The path to the cppcheck command, defaults to `cppcheck` on `PATH`"
          },
          "cppcheck.projectFile": {
            "type": "string",
            "default": "cppcheck.cppcheck",
            "description": "The Cppcheck project configuration file, relative to the project root. This can be easily configured with the Cppcheck GUI"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "author": "Aaron Levine <ald.levine@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.3",
    "@types/vscode": "^1.84.2",
    "@types/xml2js": "^0.4.14",
    "@vscode/vsce": "^2.22.0",
    "tslint": "^6.1.3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}
