<?xml version="1.0" encoding="UTF-8"?>
<project version="1">
    <root name="src"/>
    <builddir>cppcheck</builddir>
    <platform>unspecified</platform>
    <check-headers>true</check-headers>
    <check-unused-templates>true</check-unused-templates>
    <max-ctu-depth>2</max-ctu-depth>
    <max-template-recursion>100</max-template-recursion>

    <paths>
        <dir name="src"/>
    </paths>

    <includedir>
        <dir name="src"/>
        <dir name="godot-cpp/include"/>
    </includedir>

    <exclude>
        <path name="godot-cpp/"/>
        <path name="extension_api/"/>
    </exclude>

    <libraries>
        <library>openmp</library>
    </libraries>

    <suppressions>
        <suppression fileName="*godot-cpp*">*</suppression>
        <suppression>missingIncludeSystem</suppression><!-- unneccessary, if system headers aren't there you can't compile anyway! -->
        <suppression>unusedFunction</suppression><!-- tons and tons of misassigned false positives on 3rd party code -->
    </suppressions>

    <addons>
        <addon>threadsafety</addon>
    </addons>
</project>

